"role":"symbol","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"FormattingPreferences","kind":"identifier"}],"identifier":"doc:\/\/app.soulver.core\/documentation\/SoulverCore\/FormattingPreferences","title":"FormattingPreferences","kind":"symbol","url":"\/documentation\/soulvercore\/formattingpreferences"},"doc://app.soulver.core/documentation/SoulverCore/VariableList":{"url":"\/documentation\/soulvercore\/variablelist","type":"topic","navigatorTitle":[{"kind":"identifier","text":"VariableList"}],"kind":"symbol","fragments":[{"text":"class","kind":"keyword"},{"kind":"text","text":" "},{"kind":"identifier","text":"VariableList"}],"identifier":"doc:\/\/app.soulver.core\/documentation\/SoulverCore\/VariableList","abstract":[{"type":"text","text":"A list of variables (single words or phrases) and their values"}],"role":"symbol","title":"VariableList"},"doc://app.soulver.core/documentation/SoulverCore/LineCollection":{"url":"\/documentation\/soulvercore\/linecollection","type":"topic","title":"LineCollection","identifier":"doc:\/\/app.soulver.core\/documentation\/SoulverCore\/LineCollection","fragments":[{"text":"class","kind":"keyword"},{"text":" ","kind":"text"},{"text":"LineCollection","kind":"identifier"}],"abstract":[{"text":"Perform calculations across multiple lines","type":"text"}],"kind":"symbol","role":"symbol","navigatorTitle":[{"kind":"identifier","text":"LineCollection"}]},"doc://app.soulver.core/documentation/SoulverCore/CurrencyRateProvider":{"abstract":[{"text":"CurrencyRateProvider is an object that provides currency rates to be used in unit calculations","type":"text"}],"kind":"symbol","title":"CurrencyRateProvider","role":"symbol","fragments":[{"text":"protocol","kind":"keyword"},{"text":" ","kind":"text"},{"text":"CurrencyRateProvider","kind":"identifier"}],"identifier":"doc:\/\/app.soulver.core\/documentation\/SoulverCore\/CurrencyRateProvider","url":"\/documentation\/soulvercore\/currencyrateprovider","navigatorT