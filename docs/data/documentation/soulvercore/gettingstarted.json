":[{"type":"text","text":"CurrencyRateProvider is an object that provides currency rates to be used in unit calculations"}],"role":"symbol","url":"\/documentation\/soulvercore\/currencyrateprovider","identifier":"doc:\/\/app.soulver.core\/documentation\/SoulverCore\/CurrencyRateProvider","title":"CurrencyRateProvider","navigatorTitle":[{"kind":"identifier","text":"CurrencyRateProvider"}]}},"variantOverrides":[{"patch":[{"op":"replace","path":"\/identifier\/interfaceLanguage","value":"occ"},{"path":"\/topicSections","value":null,"op":"add"},{"path":"\/seeAlsoSections","op":"add","value":null}],"traits":[{"interfaceLanguage":"occ"}]}]}